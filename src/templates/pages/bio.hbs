<div class="col-lg-6 col-md-6">
	<h1>About</h1>
	<h2 class="title-margin">{{site.author.name}}</h2>
	<div class="col-lg-12 col-md-12 col-lg-offset-1 col-md-offset-1">
		<img src="{{site.author.image}}" alt="{{site.author.name}} portrait" class="img-responsive">
	</div>
	<div class="text-margin">
		<p>
			{{site.author.about_en}}
		</p>
	</div>
	<div>
		<h2 class="title-margin">Education</h2>
		<ul class="list-unstyled">
			{{# each site.author.cv.studies}}
			<li>
			  <div>
			  <p> <strong>{{this.institution}}</strong>, <em>{{this.location}}</em>, {{this.dates}}</p>
			  </div>
			</li>
			{{/ each}}
		</ul>
	</div>
	<div>
	    <h2 class="title-margin">Exhibitions</h2>
		<ul class="list-unstyled">
			{{# each site.author.cv.exhibitions}}
			<li>
			  <div>
			  <p> <strong>{{this.title}}</strong>, <em>{{this.location}}</em>, {{this.dates}}</p>
			  </div>
			</li>
			{{/ each}}
		</ul>
  	</div>
</div>